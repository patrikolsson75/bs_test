<script type="text/javascript">
    /* Table initialisation */
    $(document).ready(function() {
        $('#events').dataTable( {
            "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
            "sPaginationType": "bootstrap",
            "oLanguage": {
                "sLengthMenu": "_MENU_ records per page"
            }
        } );
    } );
</script>
<div class="page-header">
<h1>Events</h1>
</div>
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="events">
  <thead>
  <tr>
    <th>Name</th>
    <th>Start</th>
    <th>End</th>
    <th>Description</th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.start %></td>
    <td><%= event.end %></td>
    <td><%= event.description %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<div class="actions">
  <%= link_to 'New Event', new_event_path, :class=>"btn" %>
</div>